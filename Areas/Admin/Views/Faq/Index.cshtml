
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<a class="btn btn-success" href="~/Admin/Faq/New" style="margin-bottom:20px; margin-top:20px;">Добавить вопрос <i class="fa fa-plus" aria-hidden="true"></i></a>
<table id="example" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>№</th>
            <th>Порядок</th>
            <th>Вопрос</th>
            <th>Ответ</th>
            <th>Удалить</th>
        </tr>
    </thead>
    <tbody></tbody>
</table>

@section scripts
{
    <script>
        $(document).ready(function() {
            var t = $('#example').DataTable({
                language: {
                    "processing": "Подождите...",
                    "search": "Поиск:",
                    "lengthMenu": "Показать _MENU_ записей",
                    "info": "Записи с _START_ до _END_ из _TOTAL_ записей",
                    "infoEmpty": "Записи с 0 до 0 из 0 записей",
                    "infoFiltered": "(отфильтровано из _MAX_ записей)",
                    "infoPostFix": "",
                    "loadingRecords": "Загрузка записей...",
                    "zeroRecords": "Записи отсутствуют.",
                    "emptyTable": "В таблице отсутствуют данные",
                    "paginate": {
                        "first": "Первая",
                        "previous": "Предыдущая",
                        "next": "Следующая",
                        "last": "Последняя"
                    },
                    "aria": {
                        "sortAscending": ": активировать для сортировки столбца по возрастанию",
                        "sortDescending": ": активировать для сортировки столбца по убыванию"
                    },
                    "select": {
                        "rows": {
                            "_": "Выбрано записей: %d",
                            "0": "Кликните по записи для выбора",
                            "1": "Выбрана одна запись"
                        }
                    }
                },
                ajax: {
                    url: "/api/faq",
                    dataSrc: ""
                },
                columnDefs: [
                    {
                        targets: 0
                    }
                ],
                order: [[1, 'asc']],
                columns: [
                    {
                        width: "10%",
                        data: "order"

                    },
                    {
                        width: "10%",
                        data: "order"

                    },
                    {
                        data: "question",
                        width: "40%",
                        render: function (data, type, row) {
                            var cutdata = type === 'display' && data.length > 30 ?
                                data.substr( 0, 30 ) +'…' :
                                data;
                            return "<a class='text-wrap width-200' href='/Admin/faq/edit/" + row.faqItemId + "'>" + cutdata + "</a>";
                        }
                    },
                    {

                        data: "answer",
                        width: "40%",
                        render: function (data, type, row) {
                            var cutdata = type === 'display' && data.length > 30 ?
                                data.substr( 0, 30 ) +'…' :
                                data;
                            return cutdata;
                        }
                        
                    },
                    {
                        data: "faqItemId",
                        render: function(data) {
                            return "<button class='btn btn-danger js-delete' data-data-id=" +
                                data +
                                "> Удалить <i class='fa fa-trash' aria-hidden='true'></i></button>";
                        }
                    }
                ]
            });


            t.on('order.dt search.dt',
                function() {
                    t.column(0, { search: 'applied', order: 'applied' }).nodes().each(function(cell, i) {
                        cell.innerHTML = i + 1;
                    });
                }).draw();


            $('#example').on('click',
                '.js-delete',
                function() {
                    var button = $(this);

                    bootbox.confirm("Вы уверены?",
                        function(result) {
                            if (result) {
                                $.ajax({
                                    url: "/api/faq/" + button.attr("data-data-id"),
                                    method: "DELETE",
                                    success: function() {
                                        button.parents("tr").remove();
                                    }
                                });
                            }

                        });


                });

        });

    </script>
}